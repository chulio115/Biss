{
  "version": 8,
  "name": "BISS Teich-Fokus",
  "metadata": {
    "mapbox:autocomposite": true,
    "mapbox:type": "template",
    "mapbox:sdk-support": {
      "js": "2.0.0",
      "android": "10.0.0",
      "ios": "10.0.0"
    },
    "biss:description": "Maximaler Teich-Fokus - Land komplett ausgeblendet, nur Wasser sichtbar"
  },
  "center": [10.4141, 53.2509],
  "zoom": 12,
  "bearing": 0,
  "pitch": 0,
  "sources": {
    "composite": {
      "url": "mapbox://mapbox.mapbox-streets-v8,mapbox.mapbox-terrain-v2",
      "type": "vector"
    }
  },
  "sprite": "mapbox://sprites/mapbox/light-v11",
  "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#FFFFFF"
      }
    },
    {
      "id": "landcover-minimal",
      "type": "fill",
      "source": "composite",
      "source-layer": "landcover",
      "paint": {
        "fill-color": "#FAFAFA",
        "fill-opacity": 0.1
      }
    },
    {
      "id": "water-halo-outer",
      "type": "line",
      "source": "composite",
      "source-layer": "water",
      "paint": {
        "line-color": "#B3E5FC",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          8, 6,
          14, 16
        ],
        "line-opacity": 0.3,
        "line-blur": 6
      }
    },
    {
      "id": "water-halo-middle",
      "type": "line",
      "source": "composite",
      "source-layer": "water",
      "paint": {
        "line-color": "#81D4FA",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          8, 3,
          14, 8
        ],
        "line-opacity": 0.4,
        "line-blur": 3
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "composite",
      "source-layer": "water",
      "paint": {
        "fill-color": "#4DD0E1",
        "fill-opacity": 1
      }
    },
    {
      "id": "water-outline",
      "type": "line",
      "source": "composite",
      "source-layer": "water",
      "paint": {
        "line-color": "#00A3AD",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          8, 2,
          14, 4
        ]
      }
    },
    {
      "id": "waterway-glow",
      "type": "line",
      "source": "composite",
      "source-layer": "waterway",
      "paint": {
        "line-color": "#81D4FA",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          10, 4,
          16, 12
        ],
        "line-opacity": 0.3,
        "line-blur": 4
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "composite",
      "source-layer": "waterway",
      "paint": {
        "line-color": "#26C6DA",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          10, 1,
          16, 4
        ]
      }
    },
    {
      "id": "road-motorway-minimal",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "filter": ["==", ["get", "class"], "motorway"],
      "minzoom": 10,
      "paint": {
        "line-color": "#E0E0E0",
        "line-width": 1,
        "line-opacity": 0.15
      }
    },
    {
      "id": "road-primary-minimal",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "filter": ["==", ["get", "class"], "primary"],
      "minzoom": 12,
      "paint": {
        "line-color": "#E0E0E0",
        "line-width": 0.5,
        "line-opacity": 0.1
      }
    },
    {
      "id": "water-label-prominent",
      "type": "symbol",
      "source": "composite",
      "source-layer": "water_name",
      "minzoom": 6,
      "layout": {
        "text-field": ["coalesce", ["get", "name_de"], ["get", "name"]],
        "text-font": ["DIN Pro Bold", "Arial Unicode MS Bold"],
        "text-size": [
          "interpolate", ["linear"], ["zoom"],
          6, 12,
          10, 16,
          14, 22
        ],
        "text-max-width": 8,
        "text-letter-spacing": 0.1,
        "text-transform": "uppercase"
      },
      "paint": {
        "text-color": "#006064",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 3,
        "text-halo-blur": 1
      }
    },
    {
      "id": "place-city-minimal",
      "type": "symbol",
      "source": "composite",
      "source-layer": "place_label",
      "filter": ["==", ["get", "class"], "city"],
      "minzoom": 8,
      "layout": {
        "text-field": ["coalesce", ["get", "name_de"], ["get", "name"]],
        "text-font": ["DIN Pro Regular", "Arial Unicode MS Regular"],
        "text-size": 10
      },
      "paint": {
        "text-color": "#BDBDBD",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 1
      }
    },
    {
      "id": "place-town-minimal",
      "type": "symbol",
      "source": "composite",
      "source-layer": "place_label",
      "filter": ["==", ["get", "class"], "town"],
      "minzoom": 12,
      "layout": {
        "text-field": ["coalesce", ["get", "name_de"], ["get", "name"]],
        "text-font": ["DIN Pro Regular", "Arial Unicode MS Regular"],
        "text-size": 9
      },
      "paint": {
        "text-color": "#BDBDBD",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 1
      }
    }
  ]
}
