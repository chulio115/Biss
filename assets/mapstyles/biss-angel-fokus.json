{
  "version": 8,
  "name": "BISS Angel-Fokus",
  "metadata": {
    "mapbox:autocomposite": true,
    "mapbox:type": "template",
    "mapbox:sdk-support": {
      "js": "2.0.0",
      "android": "10.0.0",
      "ios": "10.0.0"
    },
    "biss:description": "Unser USP - Wasser steht im Mittelpunkt, Land maximal reduziert"
  },
  "center": [10.4141, 53.2509],
  "zoom": 10,
  "bearing": 0,
  "pitch": 0,
  "sources": {
    "composite": {
      "url": "mapbox://mapbox.mapbox-streets-v8,mapbox.mapbox-terrain-v2",
      "type": "vector"
    }
  },
  "sprite": "mapbox://sprites/mapbox/outdoors-v12",
  "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#FAFAFA"
      }
    },
    {
      "id": "landcover",
      "type": "fill",
      "source": "composite",
      "source-layer": "landcover",
      "paint": {
        "fill-color": "#F5F5F5",
        "fill-opacity": 0.3
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "composite",
      "source-layer": "landuse",
      "paint": {
        "fill-color": "#F0F0F0",
        "fill-opacity": 0.2
      }
    },
    {
      "id": "hillshade",
      "type": "fill",
      "source": "composite",
      "source-layer": "hillshade",
      "paint": {
        "fill-color": [
          "match",
          ["get", "class"],
          "shadow", "rgba(0,0,0,0.03)",
          "highlight", "rgba(255,255,255,0.1)",
          "transparent"
        ]
      }
    },
    {
      "id": "water-glow-outer",
      "type": "fill",
      "source": "composite",
      "source-layer": "water",
      "paint": {
        "fill-color": "#00A3AD",
        "fill-opacity": 0.15,
        "fill-antialias": true
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "composite",
      "source-layer": "water",
      "paint": {
        "fill-color": "#00A3AD",
        "fill-opacity": 1
      }
    },
    {
      "id": "water-outline",
      "type": "line",
      "source": "composite",
      "source-layer": "water",
      "paint": {
        "line-color": "#008B94",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          8, 1,
          14, 3
        ]
      }
    },
    {
      "id": "waterway-river",
      "type": "line",
      "source": "composite",
      "source-layer": "waterway",
      "filter": ["==", ["get", "class"], "river"],
      "paint": {
        "line-color": "#00A3AD",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          8, 1,
          14, 4
        ]
      }
    },
    {
      "id": "waterway-stream",
      "type": "line",
      "source": "composite",
      "source-layer": "waterway",
      "filter": ["==", ["get", "class"], "stream"],
      "paint": {
        "line-color": "#26C6DA",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          12, 0.5,
          16, 2
        ]
      }
    },
    {
      "id": "road-path",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "filter": ["==", ["get", "class"], "path"],
      "minzoom": 14,
      "paint": {
        "line-color": "#E0E0E0",
        "line-width": 1,
        "line-opacity": 0.3,
        "line-dasharray": [2, 2]
      }
    },
    {
      "id": "road-minor",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "filter": [
        "match", ["get", "class"], 
        ["street", "street_limited", "service"], true, false
      ],
      "minzoom": 13,
      "paint": {
        "line-color": "#E0E0E0",
        "line-width": 1,
        "line-opacity": 0.2
      }
    },
    {
      "id": "road-secondary",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "filter": [
        "match", ["get", "class"], 
        ["secondary", "tertiary"], true, false
      ],
      "minzoom": 10,
      "paint": {
        "line-color": "#E0E0E0",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          10, 0.5,
          14, 2
        ],
        "line-opacity": 0.2
      }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "filter": ["==", ["get", "class"], "primary"],
      "paint": {
        "line-color": "#BDBDBD",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          8, 0.5,
          14, 3
        ],
        "line-opacity": 0.3
      }
    },
    {
      "id": "road-motorway",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "filter": ["==", ["get", "class"], "motorway"],
      "paint": {
        "line-color": "#9E9E9E",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          6, 0.5,
          14, 4
        ],
        "line-opacity": 0.25
      }
    },
    {
      "id": "admin-state",
      "type": "line",
      "source": "composite",
      "source-layer": "admin",
      "filter": ["==", ["get", "admin_level"], 4],
      "paint": {
        "line-color": "#BDBDBD",
        "line-width": 0.5,
        "line-dasharray": [3, 2],
        "line-opacity": 0.3
      }
    },
    {
      "id": "water-label",
      "type": "symbol",
      "source": "composite",
      "source-layer": "water_name",
      "minzoom": 8,
      "layout": {
        "text-field": ["coalesce", ["get", "name_de"], ["get", "name"]],
        "text-font": ["DIN Pro Bold", "Arial Unicode MS Bold"],
        "text-size": [
          "interpolate", ["linear"], ["zoom"],
          8, 10,
          14, 16
        ],
        "text-max-width": 7,
        "text-letter-spacing": 0.05
      },
      "paint": {
        "text-color": "#006064",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 2
      }
    },
    {
      "id": "place-town",
      "type": "symbol",
      "source": "composite",
      "source-layer": "place_label",
      "filter": ["match", ["get", "class"], ["town", "village"], true, false],
      "minzoom": 10,
      "layout": {
        "text-field": ["coalesce", ["get", "name_de"], ["get", "name"]],
        "text-font": ["DIN Pro Regular", "Arial Unicode MS Regular"],
        "text-size": 11
      },
      "paint": {
        "text-color": "#9E9E9E",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 1
      }
    },
    {
      "id": "place-city",
      "type": "symbol",
      "source": "composite",
      "source-layer": "place_label",
      "filter": ["match", ["get", "class"], ["city", "settlement"], true, false],
      "minzoom": 6,
      "layout": {
        "text-field": ["coalesce", ["get", "name_de"], ["get", "name"]],
        "text-font": ["DIN Pro Medium", "Arial Unicode MS Regular"],
        "text-size": [
          "interpolate", ["linear"], ["zoom"],
          6, 11,
          12, 16
        ]
      },
      "paint": {
        "text-color": "#757575",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 1.5
      }
    }
  ]
}
