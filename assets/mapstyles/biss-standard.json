{
  "version": 8,
  "name": "BISS Standard",
  "metadata": {
    "mapbox:autocomposite": true,
    "mapbox:type": "template",
    "mapbox:sdk-support": {
      "js": "2.0.0",
      "android": "10.0.0",
      "ios": "10.0.0"
    }
  },
  "center": [10.4141, 53.2509],
  "zoom": 10,
  "bearing": 0,
  "pitch": 0,
  "sources": {
    "composite": {
      "url": "mapbox://mapbox.mapbox-streets-v8,mapbox.mapbox-terrain-v2",
      "type": "vector"
    }
  },
  "sprite": "mapbox://sprites/mapbox/outdoors-v12",
  "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#F8FAFC"
      }
    },
    {
      "id": "landcover",
      "type": "fill",
      "source": "composite",
      "source-layer": "landcover",
      "paint": {
        "fill-color": [
          "match",
          ["get", "class"],
          "wood", "#E8F5E9",
          "scrub", "#F1F8E9",
          "grass", "#F1F8E9",
          "crop", "#FFF8E1",
          "#F5F5F5"
        ],
        "fill-opacity": 0.6
      }
    },
    {
      "id": "landuse-park",
      "type": "fill",
      "source": "composite",
      "source-layer": "landuse",
      "filter": ["==", ["get", "class"], "park"],
      "paint": {
        "fill-color": "#C8E6C9",
        "fill-opacity": 0.5
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "composite",
      "source-layer": "water",
      "paint": {
        "fill-color": "#00A3AD",
        "fill-opacity": 0.9
      }
    },
    {
      "id": "water-outline",
      "type": "line",
      "source": "composite",
      "source-layer": "water",
      "paint": {
        "line-color": "#0097A7",
        "line-width": 1
      }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "composite",
      "source-layer": "waterway",
      "paint": {
        "line-color": "#00A3AD",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          8, 0.5,
          14, 2
        ]
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "composite",
      "source-layer": "building",
      "minzoom": 14,
      "paint": {
        "fill-color": "#E0E0E0",
        "fill-opacity": 0.7
      }
    },
    {
      "id": "road-minor",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "filter": [
        "all",
        ["match", ["get", "class"], ["street", "street_limited", "service", "track"], true, false]
      ],
      "paint": {
        "line-color": "#FFFFFF",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          12, 0.5,
          16, 3
        ],
        "line-opacity": 0.8
      }
    },
    {
      "id": "road-secondary",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "filter": [
        "match", ["get", "class"], ["secondary", "tertiary"], true, false
      ],
      "paint": {
        "line-color": "#FFFFFF",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          10, 1,
          16, 6
        ]
      }
    },
    {
      "id": "road-primary",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "filter": ["==", ["get", "class"], "primary"],
      "paint": {
        "line-color": "#FFE082",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          8, 1,
          16, 8
        ]
      }
    },
    {
      "id": "road-motorway",
      "type": "line",
      "source": "composite",
      "source-layer": "road",
      "filter": ["==", ["get", "class"], "motorway"],
      "paint": {
        "line-color": "#FFAB91",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          6, 1,
          16, 10
        ]
      }
    },
    {
      "id": "admin-state-province",
      "type": "line",
      "source": "composite",
      "source-layer": "admin",
      "filter": ["==", ["get", "admin_level"], 4],
      "paint": {
        "line-color": "#9E9E9E",
        "line-width": 1,
        "line-dasharray": [3, 2]
      }
    },
    {
      "id": "admin-country",
      "type": "line",
      "source": "composite",
      "source-layer": "admin",
      "filter": ["==", ["get", "admin_level"], 2],
      "paint": {
        "line-color": "#757575",
        "line-width": 1.5
      }
    },
    {
      "id": "water-label",
      "type": "symbol",
      "source": "composite",
      "source-layer": "water_name",
      "minzoom": 10,
      "layout": {
        "text-field": ["coalesce", ["get", "name_de"], ["get", "name"]],
        "text-font": ["DIN Pro Medium", "Arial Unicode MS Regular"],
        "text-size": [
          "interpolate", ["linear"], ["zoom"],
          10, 10,
          14, 14
        ],
        "text-max-width": 7
      },
      "paint": {
        "text-color": "#00838F",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "place-village",
      "type": "symbol",
      "source": "composite",
      "source-layer": "place_label",
      "filter": ["==", ["get", "class"], "village"],
      "minzoom": 10,
      "layout": {
        "text-field": ["coalesce", ["get", "name_de"], ["get", "name"]],
        "text-font": ["DIN Pro Regular", "Arial Unicode MS Regular"],
        "text-size": 12
      },
      "paint": {
        "text-color": "#616161",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 1
      }
    },
    {
      "id": "place-town",
      "type": "symbol",
      "source": "composite",
      "source-layer": "place_label",
      "filter": ["==", ["get", "class"], "town"],
      "minzoom": 8,
      "layout": {
        "text-field": ["coalesce", ["get", "name_de"], ["get", "name"]],
        "text-font": ["DIN Pro Medium", "Arial Unicode MS Regular"],
        "text-size": 14
      },
      "paint": {
        "text-color": "#424242",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 1.5
      }
    },
    {
      "id": "place-city",
      "type": "symbol",
      "source": "composite",
      "source-layer": "place_label",
      "filter": ["match", ["get", "class"], ["city", "settlement"], true, false],
      "minzoom": 6,
      "layout": {
        "text-field": ["coalesce", ["get", "name_de"], ["get", "name"]],
        "text-font": ["DIN Pro Bold", "Arial Unicode MS Bold"],
        "text-size": [
          "interpolate", ["linear"], ["zoom"],
          6, 12,
          12, 18
        ]
      },
      "paint": {
        "text-color": "#212121",
        "text-halo-color": "#FFFFFF",
        "text-halo-width": 2
      }
    }
  ]
}
